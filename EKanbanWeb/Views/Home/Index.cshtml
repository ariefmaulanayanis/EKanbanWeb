@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @ViewBag.UserRealName!</h1>
    <p>You have successfully log into <a href="@Url.Action("Index","Home",null,Context.Request.Scheme)"><strong>E-Kanban</strong>System</a>.</p>
</div>
<form method="post" asp-controller="Home" asp-action="generate">
    <input type="text" placeholder="Product Id" name="productId" value="@ViewBag.ProductId" />
    <input type="submit" value="Submit" /><br />
    @ViewBag.ProductId<br />
</form>
@if (ViewBag.ProductId != null)
{
    <qrcode content="@ViewBag.ProductId" width="200" height="200" />
    <barcode content="@ViewBag.ProductId" width="200" height="100" />
}

