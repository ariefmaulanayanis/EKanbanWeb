@model EKanbanWeb.Models.SyUser
@{
    Layout = null;
}

<script type="text/javascript">
    $(document).ready(function () {
        $(".chosen-select").chosen();
        $.validator.setDefaults({ ignore: ":hidden:not(select)" })
    });
</script>

<form asp-action="Save" asp-controller="User" method="post" id="popupForm" onsubmit="return jQueryAjaxPost(this,'Save');" autocomplete="off">

    @if (Model.UserId != 0)
    {
        <div>User Id : @Model.UserId</div>
        <input asp-for="UserId" class="form-control" hidden="hidden" />
        <hr />
    }
    <div class="row">
        <div class="col-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table width="100%" class="text-sm">
                <tr>
                    <td width="100px"><label asp-for="UserName" class="control-label"></label></td>
                    <td>
                        <input type="text" class="form-control text-sm" asp-for="UserName" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="Password" class="control-label"></label></td>
                    <td>
                        <input type="password" class="form-control text-sm" asp-for="Password" value="@Model.Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="RealName" class="control-label"></label></td>
                    <td>
                        <input type="text" class="form-control text-sm" asp-for="RealName" />
                        <span asp-validation-for="RealName" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="RoleId" class="control-label"></label></td>
                    <td>
                        <select asp-for="RoleId" asp-items="@ViewBag.Roles" class="form-control chosen-select text-sm">
                            <option value="">Please select role...</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="LineId" class="control-label"></label></td>
                    <td>
                        <select asp-for="LineId" asp-items="@ViewBag.Lines" class="form-control chosen-select text-sm">
                            <option value="">Please select line...</option>
                        </select>
                        <span asp-validation-for="LineId" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="IsActive" class="control-label"></label></td>
                    <td>
                        <div class="form-group">
                            <div class="form-check">
                                <input type="radio" class="form-check-input" asp-for="IsActive" value="True" />
                                <label class="form-check-label">Active</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" asp-for="IsActive" value="False" />
                                <label class="form-check-label">InActive</label>
                            </div>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </td>
                </tr>
            </table>
            <hr />
            <div class="form-group">
                <button type="submit" class="popup btn btn-primary" id="btnSave">
                    <span class="far fa-save" style="padding-right:10px;"></span>Save Data
                </button>
            </div>
        </div>
    </div>
</form>